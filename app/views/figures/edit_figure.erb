<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="figure[name]" id="figure_name" value="@figure.name"></p>
  <%Title.all.each do |title|%>
    <p><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.name%>"<%='checked' if @figure.titles.include?(title) %>></p>
  <%end%>
  <%Landmark.all.each do |landmark|%>
    <p><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.name%>"<%='checked' if @figure.landmarks.include?(landmark)%>></p>
  <%end%>
  <p>New Title: <input type="text" name="landmark[name]" id="new_title"></p>
  <p>New Landmark: <input type="text" name="title[name]" id="new_landmark"></p>
  <input type="submit" value="Edit Figure">
</form>
